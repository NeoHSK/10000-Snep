<Window x:Class="PcscNfcSnep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PcscNfcSnep"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Start" Click="Start_Button_Click" Height="40" Width="150" HorizontalAlignment="Left"  Margin="30 20 0 5"/>
            <Button Content="Stop" Click="Stop_Button_Click" Height="40" Width="150" HorizontalAlignment="Left" Margin="30 20 0 5"/>
            <Button Content="Device Information" Click="Device_Info_Button_Click" Height="40" Width="150" HorizontalAlignment="Left" Margin="30 20 0 5"/>
            <Button Content="Time Synchronization" Click="TimeSync_Button_Click" Height="40" Width="150" HorizontalAlignment="Left" Margin="30 20 0 5"/>
            <Button Content="Remaing Count" Click="Remaining_Button_Click" Height="40" Width="150" HorizontalAlignment="Left" Margin="30 20 0 5"/>
            <Button Content="Measurement" Click="Measurement_Button_Click" Height="40" Width="150" HorizontalAlignment="Left" Margin="30 20 0 5"/>
        </StackPanel>
        <TextBlock x:Name="ResultBlock"  Height="400" RenderTransformOrigin="0.522,-0.537" Margin="224,17,50,17"/>
    </Grid>
</Window>
